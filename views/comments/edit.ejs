<% include ../partials/header %>

<div class='container'>
	<div class='row'>
		<h1 style='text-align: center;'>Edit Review on <%= campground.name %></h1>
		<div style='width: 30%; margin: 30px auto;'>
			<form action='/campgrounds/<%= campground.slug %>/comments/<%= comment._id %>?_method=PUT' method='POST'>
				<div class='form-group'>
					<input class='form-control' type='text' name='comment[text]' value='<%= comment.text %>'>
				</div>
				<div class='form-group'>
					<button class='btn btn-lg btn-primary btn-block'>Update Review</button>
				</div>
			</form>
			<button class='btn btn-md btn-secondary' onclick="window.history.back();">Go Back</button>
			<form class='pull-right' id='delete' 
					action='/campgrounds/<%= campground.slug %>/comments/<%= comment._id %>?_method=DELETE' method='POST' style='display: inline;'>
				<button class='btn btn-md btn-danger'>Delete Review</button>
			</form>
		</div>
	</div>
</div>
<% include ../partials/footer %>